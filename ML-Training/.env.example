# Naver Blog AI Detector - ML Training Environment Variables
# Copy this file to .env and fill in your API keys

# ============================================================================
# Required API Keys
# ============================================================================

# Google Gemini API Key (for synthetic data generation)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# Optional Configuration
# ============================================================================

# Weights & Biases (for experiment tracking)
# Get your key at: https://wandb.ai/authorize
# WANDB_API_KEY=your_wandb_api_key_here
# WANDB_PROJECT=naver-blog-ai-detector
# WANDB_ENTITY=your_wandb_username

# Hugging Face Token (for downloading pretrained models/tokenizers)
# Get your token at: https://huggingface.co/settings/tokens
# HF_TOKEN=your_huggingface_token_here

# ============================================================================
# Training Configuration
# ============================================================================

# Random seed for reproducibility
RANDOM_SEED=42

# Device preference (cuda, mps, cpu)
# Leave empty for auto-detection
# DEVICE=

# Number of CPU workers for data loading
NUM_WORKERS=4

# ============================================================================
# Gemini Configuration
# ============================================================================

# Gemini model to use
GEMINI_MODEL=gemini-flash-latest

# Temperature for generation (0.0-1.0)
# Higher = more creative, Lower = more conservative
GEMINI_TEMPERATURE=0.9

# Maximum tokens per generation
GEMINI_MAX_TOKENS=2048

# ============================================================================
# Data Paths (relative to ML-Training/)
# ============================================================================

# Real data path
REAL_DATA_PATH=../Data-Preprocessing/data/processed/training_data.json

# Synthetic data output directory
SYNTHETIC_DATA_DIR=data/synthetic/

# Processed data directory
PROCESSED_DATA_DIR=data/processed/

# ============================================================================
# Model Paths
# ============================================================================

# Model checkpoints directory
CHECKPOINT_DIR=models/checkpoints/

# Optimized models directory
OPTIMIZED_DIR=models/optimized/

# CoreML models directory
COREML_DIR=models/coreml/

# Evaluation results directory
EVALUATION_DIR=models/evaluation/

# ============================================================================
# Performance Tuning
# ============================================================================

# Enable mixed precision training (fp16)
# Set to 1 for NVIDIA GPUs, 0 for CPU/MPS
# ENABLE_FP16=0

# Gradient accumulation steps
GRADIENT_ACCUMULATION_STEPS=4

# Maximum gradient norm for clipping
MAX_GRAD_NORM=1.0

# ============================================================================
# Notes
# ============================================================================
#
# 1. GEMINI_API_KEY is REQUIRED for synthetic data generation
# 2. All other variables are optional with sensible defaults
# 3. Paths are relative to ML-Training/ directory
# 4. Do NOT commit .env file to version control
# 5. Keep your API keys secure and never share them
#
# ============================================================================
